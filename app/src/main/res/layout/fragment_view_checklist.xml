<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="10dp"
            android:id="@+id/checkListType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/colorAccent"
            android:text="PreLoad CheckList:-"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:padding="10dp"
            android:id="@+id/jmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:text="JourneyManager: "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ListView
            android:layout_weight="1"
            android:id="@+id/listViewChecklists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:padding="10dp"
            android:layout_marginTop="5dp">

        </ListView>
        <TextView
            android:padding="10dp"
            android:id="@+id/checkListType2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/colorAccent"
            android:text="Decanting Inspection CheckList:-"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <ListView
            android:layout_weight="1"
            android:id="@+id/listViewChecklists2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:padding="10dp"
            android:layout_marginTop="5dp">


        </ListView>



    </LinearLayout>


</ScrollView>