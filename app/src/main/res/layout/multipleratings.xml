<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="10dp"
        android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Driver: "
           android:textColor="@android:color/black"
           android:textStyle="bold"
           android:id="@+id/driverName">
       </TextView>
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VehicleNo:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/vehicleNo">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DecantingSiteName: "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/decantingSite">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DriverRating: "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/driverRating">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RetailerRating: "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/retailerRating">
        </TextView>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DecantedTime: "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/decantedTime">
    </TextView>




    </LinearLayout>

</LinearLayout>