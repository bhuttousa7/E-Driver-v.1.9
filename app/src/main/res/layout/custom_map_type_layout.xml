<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_map_type_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_gravity="bottom"
    android:background="@color/white"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="MAP TYPE">
        </TextView>


    </LinearLayout>



   <LinearLayout
       android:id="@+id/map_typell"
       android:padding="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView

        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_weight="1">
    <View
    android:id="@+id/view_default_map_type"
    android:layout_centerInParent="true"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="66dp"
    android:layout_height="66dp"
    android:background="@drawable/selected_type"
    android:visibility="gone">
    </View>
        <ImageButton
            android:id="@+id/default_type"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/default_map">
        </ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/default_map_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:focusable="true"
                android:text="Default"
                android:textSize="11sp"
                android:textStyle="bold">


            </TextView>


        </LinearLayout>





    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        >

        <View
            android:id="@+id/view_satellite_map_type"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="@drawable/selected_type"
            android:visibility="gone"
            >
        </View>

        <ImageButton
            android:id="@+id/satellite_type"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/satellite_map">
        </ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        <TextView
            android:id="@+id/satellite_map_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="Satellite">

        </TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        >

        <View
            android:id="@+id/view_terrain_map_type"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="@drawable/selected_type"
            android:visibility="gone"
            >
        </View>

        <ImageButton
            android:id="@+id/terrain_type"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/terrain_map">
        </ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        <TextView
            android:id="@+id/terrain_map_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="Terrain">
        </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:text="SPEED:">

        </TextView>

        <Spinner
            android:id="@+id/speed_control_spinner"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

        </Spinner>


    </LinearLayout>

